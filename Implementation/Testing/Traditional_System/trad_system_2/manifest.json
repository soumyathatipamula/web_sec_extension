{
    "manifest_version": 3,
    "name": "XSS Alert Extension",
    "version": "1.1",
    "description": "Detects and mitigates XSS attacks, phishing URLs, and anomalies with real-time HTTP analysis.",
    "permissions": [
      "storage",
      "notifications",
      "tabs",
      "scripting",
      "downloads",
      "declarativeNetRequest"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["purify.js", "content.js"]
      }
    ]
  }